@inherits LayoutComponentBase
@inject IThemeService ThemeService
@inject ISettingsService SettingsService

<div class="flex min-h-screen bg-gray-50">
    <!-- 桌面端侧边栏，移动端隐藏 -->
    <div class="hidden md:block w-64 bg-white shadow-lg">
        <NavMenu />
    </div>

    <!-- 移动端导航栏 -->
    <div class="md:hidden fixed top-0 left-0 right-0 z-40 bg-white shadow-lg">
        <NavMenu />
    </div>

    <main class="flex-1 flex flex-col md:ml-0 pt-16 md:pt-0">
        <div class="bg-white shadow-sm border-b px-4 md:px-6 py-4 transition-colors duration-200">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank"
               class="text-blue-600 hover:text-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 rounded-md px-2 py-1 transition-all duration-200 hover:shadow-lg">
               About
            </a>
        </div>

        <article class="flex-1 p-4 md:p-6">
            @Body
        </article>
    </main>
</div>