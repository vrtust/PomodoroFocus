@inherits LayoutComponentBase
@inject IThemeService ThemeService
@inject ISettingsService SettingsService

<div class="flex min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
    <!-- 桌面端侧边栏 -->
    <div class="hidden md:flex md:w-64 md:flex-col md:fixed md:inset-y-0 md:z-30">
        <NavMenu IsMobileMenu="false" />
    </div>

    <!-- 移动端导航栏 -->
    <div class="md:hidden fixed top-0 left-0 right-0 z-40">
        <NavMenu IsMobileMenu="true" />
    </div>

    <!-- 主内容区域 -->
    <main class="flex-1 flex flex-col md:ml-64 pt-16 md:pt-0">
        <!-- 内容区域 -->
        <article class="flex-1">
            <div class="container mx-auto px-4 py-6 max-w-7xl">
                @Body
            </div>
        </article>
    </main>
</div>