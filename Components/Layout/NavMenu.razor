@code {
    [Parameter]
    public bool IsMobileMenu { get; set; }
}

<style>
    /* 活动链接样式 */
    .nav-link.active {
        background-color: rgba(59, 130, 246, 0.1);
        color: rgb(37, 99, 235);
        font-weight: 600;
    }

    .dark .nav-link.active {
        background-color: rgba(59, 130, 246, 0.2);
        color: rgb(96, 165, 250);
    }

    /* 活动链接图标样式 */
